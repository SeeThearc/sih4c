{
  "name": "agritrace-blockchain",
  "version": "1.0.0",
  "description": "AgriTrace Blockchain Supply Chain System - SIH 2025",
  "author": "PratTandon",
  "repository": {
    "type": "git",
    "url": "https://github.com/PratTandon/SIH-BlockChain-2025"
  },
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "coverage": "npx hardhat coverage",
    "deploy:local": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "npx hardhat run scripts/deploy.js --network sepolia",
    "deploy:polygon": "npx hardhat run scripts/deploy.js --network polygon",
    "deploy:mainnet": "npx hardhat run scripts/deploy.js --network mainnet",
    "verify:sepolia": "npx hardhat run scripts/verify-contracts.js --network sepolia",
    "verify:polygon": "npx hardhat run scripts/verify-contracts.js --network polygon",
    "verify:mainnet": "npx hardhat run scripts/verify-contracts.js --network mainnet"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@chainlink/contracts": "^0.8.0",
    "hardhat": "^2.19.0",
    "chai": "^4.3.10",
    "ethers": "^6.8.0"
  },
  "keywords": [
    "blockchain",
    "supply-chain",
    "sih",
    "agritech",
    "ethereum"
  ]
}
